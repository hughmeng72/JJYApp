<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:listSeparatorTextViewStyle"
                android:padding="4dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="名称："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/approval_flow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="现代戏头套，老旦6500元，常宝6000元" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="编号："
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval_flow_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2016-101512" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="部门："
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval_flow_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="舞美中心" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="申请人："
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval_flow_requestor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="沈金囡" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="日期："
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval_flow_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2016-09-27" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/approval_flow_amount_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:visibility="gone"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="金额："
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval_flow_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1234.56" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="说明："
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/approval_flow_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="现代戏头套，老旦6500元，常宝头套6000元" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/approval_flow_budget_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:listSeparatorTextViewStyle"
                        android:visibility="gone"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="预算："
                            android:textStyle="bold" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="列支科目："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_item_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="办公费" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="列支项目："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_project_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="综合办公室" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="预算总金额："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_amount_total"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="240,000.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="剩余金额（占比）："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_amount_left"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="104,225.60 (43%)" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="采购待批金额："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_amount_paying_procument"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="0.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="采购已批金额："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_amount_paid_procument"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="240,000.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="报销待支金额："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_amount_paying_reimbursement"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="0.00" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="报销已支金额："
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/approval_flow_budget_amount_paid_reimbursement"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="131,774.40" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="附件："
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/approval_flow_attachments"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        style="?android:listSeparatorTextViewStyle"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="进度："
                            android:textStyle="bold" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/approval_flow_steps"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <!-- Flow Toolbar -->
        <com.pekingopera.oa.common.Fab
            android:id="@+id/fab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="36dp"
            android:layout_marginRight="24dp"
            android:visibility="invisible"
            style="@style/Widget.MaterialSheetFab.Fab" />

        <!-- Overlay that dims the screen -->
        <com.gordonwong.materialsheetfab.DimOverlayFrameLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Circular reveal container for the sheet -->
        <io.codetail.widget.RevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|bottom"
            android:orientation="vertical">

            <!-- Sheet that contains your items -->
            <android.support.v7.widget.CardView
                android:id="@+id/fab_sheet"
                style="@style/Widget.MaterialSheetFab.Sheet">

                <!-- Sheet items -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fab_sheet_item_reminder"
                        style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                        android:drawableLeft="@drawable/ic_access_alarms_grey600_24dp"
                        android:drawableStart="@drawable/ic_access_alarms_grey600_24dp"
                        android:text="不同意"
                        android:tag="disagree" />

                    <TextView
                        android:id="@+id/fab_sheet_item_photo"
                        style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                        android:drawableLeft="@drawable/ic_photo_camera_grey600_24dp"
                        android:drawableStart="@drawable/ic_photo_camera_grey600_24dp"
                        android:text="办结"
                        android:tag="finalize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/theme_accent">

                        <TextView
                            android:id="@+id/fab_sheet_item_note"
                            style="@style/TextAppearance.MaterialSheetFab.Sheet.Item"
                            android:drawableLeft="@drawable/ic_create_grey600_24dp"
                            android:drawableStart="@drawable/ic_create_grey600_24dp"
                            android:text="同意"
                            android:tag="agree" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </io.codetail.widget.RevealLinearLayout>
    </RelativeLayout>
</LinearLayout>