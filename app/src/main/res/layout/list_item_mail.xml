<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="?android:listSeparatorTextViewStyle"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/item_mail_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Title"/>

    <TextView
        android:id="@+id/item_mail_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_mail_subject"
        android:layout_below="@id/item_mail_subject"
        android:padding="4dp"
        tools:text="Type"/>

    <TextView
        android:id="@+id/item_mail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/item_mail_subject"
        android:layout_below="@id/item_mail_subject"
        android:padding="4dp"
        tools:text="Add Time"/>

</RelativeLayout>