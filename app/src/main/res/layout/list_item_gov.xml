<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                style="?android:listSeparatorTextViewStyle"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/item_gov_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Gov Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/item_gov_creator_step_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_gov_name"
        android:layout_below="@id/item_gov_name"
        android:padding="4dp"
        tools:ignore="RtlHardcoded"
        tools:text="Creator | Step Name"/>

    <TextView
        android:id="@+id/item_gov_category_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_gov_name"
        android:layout_toRightOf="@id/item_gov_creator_step_name"
        android:padding="4dp"
        tools:text="Category | Status"/>

    <TextView
        android:id="@+id/item_gov_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/item_gov_name"
        android:layout_below="@id/item_gov_name"
        android:padding="4dp"
        tools:ignore="RtlHardcoded"
        tools:text="Create Time"/>

</RelativeLayout>